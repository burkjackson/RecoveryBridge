# ============================================================
# RecoveryBridge — Environment Variables
# Copy this file to .env.local and fill in your values.
# NEVER commit .env.local to git.
# ============================================================

# ------------------------------------------------------------
# Supabase (Required)
# Get from: Supabase Dashboard → Project Settings → API
# ------------------------------------------------------------
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ------------------------------------------------------------
# VAPID Keys for Web Push Notifications (Required)
# Generate with: npx web-push generate-vapid-keys
# Both VAPID_PUBLIC_KEY and NEXT_PUBLIC_VAPID_PUBLIC_KEY
# should be set to the same public key value.
# ------------------------------------------------------------
VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_PRIVATE_KEY=your_vapid_private_key_here
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_SUBJECT=mailto:support@recoverybridge.com

# ------------------------------------------------------------
# Session Cleanup Secret (Required for cron job)
# Used to authenticate the cleanup-sessions API route.
# Generate a strong random string: openssl rand -hex 32
# ------------------------------------------------------------
CLEANUP_SECRET_KEY=your_cleanup_secret_here

# ------------------------------------------------------------
# Sentry Error Tracking (Optional)
# Get from: https://sentry.io → Project Settings → Client Keys
# ------------------------------------------------------------
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn_here
SENTRY_ORG=your_sentry_org_slug
SENTRY_PROJECT=your_sentry_project_slug
SENTRY_AUTH_TOKEN=your_sentry_auth_token
